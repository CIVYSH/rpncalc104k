<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="AppBaseTheme" parent="android:Theme"></style>    
    
    <!-- Application theme. It doesn't depend on API level-->
    <style name="AppTheme" parent="AppBaseTheme"><!-- 
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item> -->
    </style>
    
    <style name="buttonStyle" >
        <item name="android:padding">0dp</item>
         <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">1dp</item>    
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="buttonStyle.Digit" >
        <item name="android:background">@drawable/button_digit</item>
        <item name="android:textSize">@dimen/button_digit_text_size</item>        
    </style>
    <style name="buttonStyle.Operation" >
        <item name="android:background">@drawable/button_operation</item>
        <item name="android:padding">@dimen/button_operation_padding</item>
    </style>
    <style name="buttonStyle.Control" >
        <item name="android:background">@drawable/button_control</item>
    </style>
    <style name="buttonStyle.Control.Enter" >
        <item name="android:background">@drawable/button_control_enter</item>
    </style>
    <style name="buttonStyle.Control.Pop" >
        <item name="android:background">@drawable/button_control_pop</item>
    </style>
    <style name="buttonStyle.ChangePage" >
        <item name="android:background">@drawable/button_control</item>
    </style>

    <style name="layoutButtonsLevel_1" >
        <!--  <item name="android:orientation">horizontal</item> -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="layoutButtonsLevel_2" >
        <!-- <item name="android:orientation">vertical</item> -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>
