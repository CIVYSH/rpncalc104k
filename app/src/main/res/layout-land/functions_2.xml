<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="0dp"
              android:orientation="vertical"
              android:padding="0dp">

    <LinearLayout
        style="@style/layoutButtonsLevel_1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/butSummation"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_summation"/>

        <ImageButton
            android:id="@+id/butSummationRange"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_summation_n"/>

        <ImageButton
            android:id="@+id/butMean"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_mean"/>

        <ImageButton
            android:id="@+id/butMeanRange"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_mean_n"/>
    </LinearLayout>

    <LinearLayout
        style="@style/layoutButtonsLevel_1"
        android:layout_weight="0"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        style="@style/layoutButtonsLevel_1"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/butTriangleSurface"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_surface_triangle"/>

        <ImageButton
            android:id="@+id/butCircleSurface"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_surface_circle"/>

    </LinearLayout>

    <LinearLayout
        style="@style/layoutButtonsLevel_1"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/butHypotenusePythagoras"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_hypotenuse"/>

        <ImageButton
            android:id="@+id/butLegPythagoras"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_leg"/>

    </LinearLayout>

    <LinearLayout
        style="@style/layoutButtonsLevel_1"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/layoutButtonsLevel_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/butSwitch2"
                style="@style/buttonStyle.ControlOperations"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_shuffle"/>

            <ImageButton
                android:id="@+id/butFunctionsLess"
                style="@style/buttonStyle.ControlOperations"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_functions_less"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/butQuadraticEquation"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:src="@drawable/op_quadratic_equation"/>
    </LinearLayout>

</LinearLayout>