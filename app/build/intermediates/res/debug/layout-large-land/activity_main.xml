<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:tag="large-land"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    <LinearLayout 
        android:id="@+id/topLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="0dp" >  
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" >
            
            <HorizontalScrollView
                android:id="@+id/scrollNumbers"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/layout_numbers_height"
                android:padding="0dp"
                android:fillViewport="true" >
                <LinearLayout
                    android:id="@+id/layoutNumbers"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scrollHorizontally="true"
                    android:layout_gravity="center|left" >
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:id="@+id/parentDigits"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/layout_digits_height"
                android:layout_margin="0dp"
                android:dividerHeight="0dp"
                android:padding="0dp" >
           		<TextView
           		    android:id="@+id/tvAngleMode"
                	android:layout_height="match_parent"
                	android:layout_width="@dimen/angle_view_width"
                    android:textSize="@dimen/angle_text_size"
                    android:gravity="center" />
                <HorizontalScrollView
                    android:id="@+id/scrollDigits"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:fillViewport="true" >            
                    <TextView
                        android:id="@+id/tvDigits"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:lines="1"                    
                        android:scrollHorizontally="true"
                        android:textSize="@dimen/list_digits_text_size" /> 
                </HorizontalScrollView>
                <HorizontalScrollView
                    android:id="@+id/scrollError"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:fillViewport="true" >       
                	<TextView
	                    android:id="@+id/tvError"
                    	android:layout_width="wrap_content"
                    	android:layout_height="match_parent"
                        android:lines="1"                    
            	    	android:gravity="center_vertical"
                        android:scrollHorizontally="true"
                    	android:textSize="@dimen/error_text_size"
                    	android:textColor="@color/error_text_color"     />
                </HorizontalScrollView>
           		<TextView
                	android:id="@+id/writingDigits"
                	android:text="|"
                	android:paddingBottom="@dimen/writing_view_padding"
                	android:layout_marginLeft="@dimen/writing_view_margin"
                	android:layout_height="match_parent"
                	android:layout_width="wrap_content"
                    android:textSize="@dimen/list_digits_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topLayout" 
        android:layout_margin="0dp"
        android:padding="0dp"
        android:dividerHeight="0dp"
        android:baselineAligned="false" >
            <LinearLayout
                android:orientation="horizontal"
                style="@style/layoutButtonsLevel_1" >            
                <Button
                    android:id="@+id/but1"
                    android:text="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <Button
                    android:id="@+id/but2"
                    android:text="2"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <Button
                    android:id="@+id/but3"
                    android:text="3"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
        <ImageButton
            android:id="@+id/butAddition"
            android:src="@drawable/op_addition"
            android:layout_height="fill_parent"  android:layout_width="0dp"  android:layout_weight="1"
            style="@style/buttonStyle.Operation" />          
        <ImageButton
            android:id="@+id/butMultiplication"
            android:src="@drawable/op_multiplication"
            android:layout_height="fill_parent"   android:layout_width="0dp" android:layout_weight="1"
            style="@style/buttonStyle.Operation" />
        <ImageButton
            android:id="@+id/butNegative"
            android:src="@drawable/op_negative"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/buttonStyle.Operation" />

        <ImageButton
            android:id="@+id/butSine"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_sine" />

        <ImageButton
            android:id="@+id/butArcSine"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_arcsine" />

            </LinearLayout>
    
            <LinearLayout
                android:orientation="horizontal"
                style="@style/layoutButtonsLevel_1" >
            
                <Button
                    android:id="@+id/but4"
                    android:text="4"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <Button
                    android:id="@+id/but5"
                    android:text="5"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <Button
                    android:id="@+id/but6"
                    android:text="6"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />   
        <ImageButton
            android:id="@+id/butSubtraction"
            android:src="@drawable/op_subtraction"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/buttonStyle.Operation" />
        <ImageButton
            android:id="@+id/butDivision"
            android:src="@drawable/op_division"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/buttonStyle.Operation" />     
        <ImageButton
            android:id="@+id/butInversion"
            android:src="@drawable/op_inversion"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/buttonStyle.Operation" />

        <ImageButton
            android:id="@+id/butCosine"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_cosine" />

        <ImageButton
            android:id="@+id/butArcCosine"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_arccosine" />
            
            </LinearLayout>        
            <LinearLayout
                android:orientation="horizontal"
                style="@style/layoutButtonsLevel_1" >
                <Button
                    android:id="@+id/but7"
                    android:text="7"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <Button
                    android:id="@+id/but8"
                    android:text="8"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <Button
                    android:id="@+id/but9"
                    android:text="9"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />   
        <ImageButton
            android:id="@+id/butSquare"
            android:src="@drawable/op_square"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/buttonStyle.Operation" />       
        <ImageButton
            android:id="@+id/butSquareRoot"
            android:src="@drawable/op_squareroot"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/buttonStyle.Operation" />   
        <ImageButton
            android:id="@+id/butExponentiation"
            android:src="@drawable/op_exponentiation"
            android:layout_height="fill_parent"       android:layout_width="0dp"         android:layout_weight="1"
            style="@style/buttonStyle.Operation" />

        <ImageButton
            android:id="@+id/butTangent"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_tangent" />

        <ImageButton
            android:id="@+id/butArcTangent"
            style="@style/buttonStyle.Operation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/op_arctangent" />
      
            </LinearLayout>        
            <LinearLayout
                android:orientation="horizontal"
                style="@style/layoutButtonsLevel_1" >
                <Button
                    android:id="@+id/butDecimal"
                    android:text="@string/decimalSeparator"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <Button
                    android:id="@+id/but0"
                    android:text="0"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />
                <ImageButton
                    android:id="@+id/butDelete"
                    android:src="@drawable/ic_action_backspace"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle.Digit" />

                <ImageButton
                    android:id="@+id/butLog10"
                    style="@style/buttonStyle.Operation"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/op_log" />

                <ImageButton
                    android:id="@+id/butLogXY"
                    style="@style/buttonStyle.Operation"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/op_logxy" />

                <ImageButton
                    android:id="@+id/butDegreeToRadian"
                    style="@style/buttonStyle.Operation"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/op_toradian" />

                <ImageButton
                    android:id="@+id/butRadianToDegree"
                    style="@style/buttonStyle.Operation"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/op_todegree" />

            <ImageButton
                android:id="@+id/butPI"
                style="@style/buttonStyle.Operation"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/op_pi" />
     
            </LinearLayout>      
            <LinearLayout
                android:orientation="horizontal"
                style="@style/layoutButtonsLevel_1" >
            <ImageButton
                android:id="@+id/butEnterNumber"
                android:src="@drawable/ic_action_accept"
                style="@style/buttonStyle.Control.Enter"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
            <ImageButton
                android:id="@+id/butPopNumber"
                android:src="@drawable/ic_action_cancel"
                style="@style/buttonStyle.Control.Pop"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
            <ImageButton
                android:id="@+id/butSwitch"
                android:src="@drawable/ic_action_shuffle"
                style="@style/buttonStyle.Control"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/butUndo"
                    style="@style/buttonStyle.Control"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_undo" />

            <ImageButton
                android:id="@+id/butRedo"
                style="@style/buttonStyle.Control"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_action_redo" />

            <ImageButton
                android:id="@+id/butSummation"
                style="@style/buttonStyle.Operation"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/op_summation" />

            <ImageButton
                android:id="@+id/butMean"
                style="@style/buttonStyle.Operation"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/op_mean" />

            <ImageButton
                android:id="@+id/butE"
                style="@style/buttonStyle.Operation"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/op_e" />
            <ImageButton
                android:id="@+id/butFunctions"
                android:src="@drawable/ic_action_new"
                style="@style/buttonStyle.Control"
                android:layout_height="match_parent"       android:layout_width="1dp"
                android:visibility="gone" /> 
        
  
        	</LinearLayout>
    </LinearLayout>
 </RelativeLayout><!-- From: file:/media/besokare/1TB/besokare/informatica/StudioProjects/RPNCalc104k/app/src/main/res/layout-large-land/activity_main.xml -->